<div class="orders-index-jumbotron">
	<div class="container">
		<h1 id="static-header">Current Order</h1>
	</div>
</div>

 <% if notice %>
    <p class="alert alert-warning"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
 <% end %>

<div class="container show-container">
  <h3>Order details for order <%= @order_html.id %>:</h3>
  <br>

    <p>Order ID: <%= @order_html.id %></p>
    <p>Total: <%= number_to_currency(@order_html.total) %></p>
    <p>Shipped: <%= @order_html.shipped %></p>
    <p>Product: <%= @order_html.product.title %></p>
    <p>User Email: <%= @order_html.user.email %></p>


  <div class="bottom-navigation-links">
    <%= link_to 'Back to Orders', orders_path, class: "btn btn-navigate" %>
  </div>
</div>

<div class="extra-space"></div>