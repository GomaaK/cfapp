<%= image_tag("books_products.jpg", class: "img-responsive") %>
<h1>Add New Book</h1>

<% if notice %>
  <p class="notice alert alert-warning"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<div class="new-product-container">

	<% if signed_in? && current_user.admin? %>
		<%= render 'form' %>
	<% end %>

	<%= link_to 'Back', products_path, class: "btn btn-navigate" %>
</div>