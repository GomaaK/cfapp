<div class="devise-page">
  <h2>Sign Up</h2>

  <div class="signup-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <p>Please sign up here</p>

      <% if notice %>
        <p class="alert alert-warning"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      
      <%= devise_error_messages! %>

      <div class="input-group input-group-sm">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-envelope"></span>
        </span>
        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your Email Address" %>
        </div>
      </div>

      <br>

      <div class="input-group input-group-sm">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-lock"></span>
        </span>
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Type a Password" %>
        </div>
      </div>

      <div class="input-group input-group-sm">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-lock"></span>
        </span>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Retype your Password" %>
        </div>
      </div>

      <br>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>